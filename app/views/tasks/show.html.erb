<h1><%= @task&.title %></h1>
      <p><em><%= @task&.details %></em></p>
      <p>Completed? <%= link_to check_box_tag(:task, :completed, @task.completed), 
                          "/tasks/#{@task.id}/complete/#{!@task.completed}" %>
                          </p>
      <%= link_to "Edit", edit_task_path(@task) %><br>
      <%= link_to "Delete", @task,
        data: {
                    turbo_method: :delete
                  } %><br>
      <%= link_to "Back", tasks_path %>